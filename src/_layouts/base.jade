//- Custom Configuration
block config
    //- Setup site's base URL to match the "baseUrl" key within `package.json`
    //- Otherwise default to relative pathing
    - var baseUrl = config.baseUrl || './'

doctype html
html.no-js(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')

        title Not Hotdog PWA

        meta(name='description', content= '')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')

        link(rel='manifest', href= baseUrl + 'manifest.json')
        meta(name='mobile-web-app-capable', content='yes')
        meta(name='apple-mobile-web-app-capable', content='yes')

        link(rel='apple-touch-icon', sizes='57x57', href= baseUrl + 'assets/not-hotdog-pwa/images/favicon/apple-icon-57x57.png')
        link(rel='apple-touch-icon', sizes='60x60', href= baseUrl + 'assets/not-hotdog-pwa/images/favicon/apple-icon-60x60.png')
        link(rel='apple-touch-icon', sizes='72x72', href= baseUrl + 'assets/not-hotdog-pwa/images/favicon/apple-icon-72x72.png')
        link(rel='apple-touch-icon', sizes='76x76', href= baseUrl + 'assets/not-hotdog-pwa/images/favicon/apple-icon-76x76.png')
        link(rel='apple-touch-icon', sizes='114x114', href= baseUrl + 'assets/not-hotdog-pwa/images/favicon/apple-icon-114x114.png')
        link(rel='apple-touch-icon', sizes='120x120', href= baseUrl + 'assets/not-hotdog-pwa/images/favicon/apple-icon-120x120.png')
        link(rel='apple-touch-icon', sizes='144x144', href= baseUrl + 'assets/not-hotdog-pwa/images/favicon/apple-icon-144x144.png')
        link(rel='apple-touch-icon', sizes='152x152', href= baseUrl + 'assets/not-hotdog-pwa/images/favicon/apple-icon-152x152.png')
        link(rel='apple-touch-icon', sizes='180x180', href= baseUrl + 'assets/not-hotdog-pwa/images/favicon/apple-icon-180x180.png')
        link(rel='icon', type='image/png', sizes='192x192', href= baseUrl + 'assets/not-hotdog-pwa/images/favicon/android-icon-192x192.png')
        link(rel='icon', type='image/png', sizes='32x32', href= baseUrl + 'assets/not-hotdog-pwa/images/favicon/favicon-32x32.png')
        link(rel='icon', type='image/png', sizes='96x96', href= baseUrl + 'assets/not-hotdog-pwa/images/favicon/favicon-96x96.png')
        link(rel='icon', type='image/png', sizes='16x16', href= baseUrl + 'assets/not-hotdog-pwa/images/favicon/favicon-16x16.png')


        link(rel='mask-icon', href=baseUrl + 'assets/not-hotdog-pwa/images/favicon/safari-pinned-tab.svg', color='#ed1c24')
        meta(name='msapplication-TileColor', content='#ed1c24')
        meta(name='theme-color', content='#ed1c24')

        block stylesheets
            link(rel='stylesheet', href= baseUrl + 'assets/not-hotdog-pwa/css/main.css')

    body
        main#main
            block content

        block scripts
            script(src=baseUrl + 'assets/not-hotdog-pwa/js/main.js')

            script#toaster-template(type='text/template')
                .toaster__card(class='toaster{{= it.ind }}')
                    p {{! it.message }}
                    | {{? it.isReload }}
                    button.btn-refresh.js-refresh REFRESH
                    | {{? }}
                    button.js-dismiss
                        span.sr-only Close
                        i.icon.icon-cross